<%layout("/partials/boilerplate")-%>
<div class="container">
	
	<form action="/login" method="POST">
	  <div class="form-group row">
	    <label for="a" class="col-sm-2 col-form-label">username</label>
	    <div class="col-sm-10">
	      <input type="text" class="form-control" id="a" placeholder="username" name="username">
	    </div>
	  </div>
	 
	  <div class="form-group row">
	    <label for="c" class="col-sm-2 col-form-label">password</label>
	    <div class="col-sm-10">
	      <input type="password" class="form-control" id="c" placeholder="password" name="password">
	    </div>
	  </div>	  
	  <div class="form-group row">
	    <div class="col-sm-10">
	      <button type="submit" class="btn btn-primary">login now</button>
	    </div>
	  </div>
	</form>
	<div class="float-right"><a href="/forgot-password">forgot password ?</a></div>

</div>

