<%layout('/partials/boilerplate')%>
<form action="/reset/<%=token%>?_method=PUT" method="POST">
		<div class="form-group row">
			<label for="newPassword" class="col-sm-2 col-form-label">new password</label>
			<input type="password" name="newPassword" class="form-control col-sm-8" id="newPassword">
		</div>
		<div class="form-group row">
			<label for="confirmPassword" class="col-sm-2 col-form-label">Confirm password</label>
			<input type="password" name="confirmPassword" class="form-control col-sm-8" id="confirmPassword">
		</div>
		<div id="validation" class="alert"></div>
		<button class="btn btn-outline-primary" id="submit-btn">submit</button>
</form>

<script src="/javascripts/profile.js"></script> <!-- password validation -->