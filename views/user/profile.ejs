<%layout("/partials/boilerplate")-%>
<img src="<%=currentUser.avatar.secure_url%>" alt="Avatar" class="img-fluid rounded-circle	 d-flex m-auto" width="150">
<%if(recentPost.length){%>
	<h1 class="text-center">Recent Posts</h1>
	<%recentPost.forEach(post=>{%>
		<div class="card mt-3">
			<div class="card-header">
				<a href="/posts/<%=post._id%>"><%=post.title%></a>
			</div>
			<div class="card-body">

				<div class="card-text"><%=post.description%></div>
			</div>
		</div>
	<%})%>
<%}%>

<h1 class=" text-center mt-5">Edit Profile</h1>
<div class="container">
	
	<form action="/profile/<%=currentUser._id%>?_method=PUT" method="POST"  id="form" enctype="multipart/form-data">

	<div class="form-group row">
	  <label for="currentPassword" class="col-sm-2 col-form-label">current Password</label>
	  <div class="col-sm-10">
	   <input type="password" class="form-control" placeholder="current password (required to edit profile information)" id="currentPassword" name="currentPassword">
	  </div>
	</div>
	  <div class="form-group row">
	    <label for="a" class="col-sm-2 col-form-label">Username</label>
	    <div class="col-sm-10">
	      <input type="text" class="form-control" id="a" placeholder="username" name="username" value="<%=currentUser.username%>" required>
	    </div>
	  </div>
	  <div class="form-group row">
	    <label for="b" class="col-sm-2 col-form-label">Email</label>
	    <div class="col-sm-10">
	      <input type="email" class="form-control" id="b" placeholder="Email" name="email" value="<%=currentUser.email%>" required>
	    </div>
	  </div>
	  <div class="form-group row">
	    <label for="c" class="col-sm-2 col-form-label">Avatar</label>
	    <div class="col-sm-10">
	      <input type="file" id="c" placeholder="Avatar" name="avatar" />
	    </div>
	  </div>
	  
	  <div class="form-group row">
	    <label for="newPassword" class="col-sm-2 col-form-label">New Password</label>
	    <div class="col-sm-10">
	     <input type="password" class="form-control" placeholder="New Password" id="newPassword" name="newPassword">
	    </div>
	  </div>
	  <div class="form-group row">
	    <label for="confirmPassword" class="col-sm-2 col-form-label">Confirm Password</label>
	    <div class="col-sm-10">
	     <input type="password" class="form-control" placeholder="Confirm Password" id="confirmPassword" name="confirmPassword">
	    </div>
	  </div>

	  <div id="validation" class="alert"></div>
	  
		
	  <div class="form-group row d-block">
	    <div class="col-sm-10">
	      <button class="btn btn-primary" id="submit-btn">submit</button>
	    </div>
	  </div>
	</form>

</div>
<script src="/javascripts/profile.js"></script>